---
const { titulo, descripcion } = Astro.props;
---

<section
  class="bg-gradient-to-br from-[#530b0c] to-[#2d0809] rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300"
>
  <h3 class="text-center text-2xl font-semibold text-white tracking-wide mb-4">
    {titulo}
  </h3>
  <p class="text-justify text-gray-200 leading-relaxed">
    {descripcion}
  </p>
</section>
